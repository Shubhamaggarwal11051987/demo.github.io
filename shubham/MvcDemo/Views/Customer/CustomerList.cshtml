@{
}
<div class="row">
    <div class="col-6">

        @if (Model.Count() == 0) {
        <h1>Sorry not found customer</h1>
        }


        else{





        <table class="table table-bordered">
            <tr>
                <th>Name</th>
                <th>Action</th>
            </tr>
            @foreach (var cust in Model)
            {
                <tr>
                    <td>@cust.Name</td>
                    <td><a asp-action="CustomerDetail" asp-controller="Customer" asp-route-id="@cust.Id">View Detail</a></td>
                </tr>
            }
        </table>

        }

    </div>
</div>